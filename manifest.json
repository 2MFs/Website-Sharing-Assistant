{
    "manifest_version": 3,
    "name": "網站分享助手 - Website Sharing Assistant",
    "version": "1.1",
    "description": "幫助用戶輕鬆分享內容至其他平台，如Facebook、Line、Skype等。",
    "permissions": [
        "activeTab",
        "scripting",
        "contextMenus", 
        "tabs"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon-16.png",
        "48": "icon-48.png",
        "128": "icon-128.png"
      }
    },
    
    "icons": {
      "16": "icon-16.png",
      "48": "icon-48.png",
      "128": "icon-128.png"
    }
  }
  